@model OrderDetailsViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

@section Styles
{
    @{
        await Html.RenderPartialAsync("ThuVienBangStylespartial.cshtml");
    }
}

<h1>Chi tiết</h1>

<div>
    <h4>Đơn hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThoiGianTao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName) VND
        </dd>

        <dt class="col-sm-2">Tổng tiền</dt>
        <dd class="col-sm-10">@String.Format("{0:### ### ### VND}", Model.LayThanhTien())</dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Items)
        </dt>
    </dl>
    <div class="table-responsive">
        <table class="table table-bordered table-striped" id="dtItem" width="100%" cellspacing="0">
            <thead class="thead-light">
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Tạm tính</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                        <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                        <td>@String.Format("{0:### ### ### VND}", item.LayTamTinh())</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
