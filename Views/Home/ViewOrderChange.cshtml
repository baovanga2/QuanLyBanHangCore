@model IEnumerable<OrderChange>

@{
    ViewData["Title"] = "Bản ghi đơn hàng";
}

@section Styles
{
    <!-- Custom styles for this page -->
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Bản ghi thêm, xóa đơn hàng</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dtChange" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.ThoiGian)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.HanhDong)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.OrderID)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.ThoiGian)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.HanhDong)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.OrderID)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ThuVienBangScriptsPartial.cshtml");
        await Html.RenderPartialAsync("KichHoatDieuHuongScriptsPartial.cshtml", "BGDH");
    }
}