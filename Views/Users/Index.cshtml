@model IEnumerable<User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

@section Styles
{
    @{
        await Html.RenderPartialAsync("ThuVienBangStylespartial.cshtml");
    }
}

<p>
    <a asp-action="Create" class="btn cur-p btn-outline-primary"><i class="fas fa-user-plus"></i> Thêm mới</a>
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách người dùng</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dtUser" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Ten)
                        </td>
                        <td class="text-center">@Html.DisplayNameFor(model => model.SDT)</td>
                        <td>
                            Tài khoản
                        </td>
                        <td class="text-center">Hành động</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ten)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-taiKhoan="@item.UserName" class="btn btn-sm btn-primary"><i class="fas fa-tools"></i></a> |
                                <a asp-action="Details" asp-route-taiKhoan="@item.UserName" class="btn btn-sm btn-primary"><i class="fas fa-list"></i></a> |
                                <a asp-action="UserPasswordChange" asp-route-taiKhoan="@item.UserName" class="btn btn-sm btn-primary"><i class="fas fa-key"></i></a> |
                                <a asp-action="Delete" asp-route-taiKhoan="@item.UserName" class="btn btn-sm btn-primary"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("ThuVienBangScriptsPartial.cshtml");
        await Html.RenderPartialAsync("KichHoatBangScriptsPartial.cshtml");
        await Html.RenderPartialAsync("KichHoatDieuHuongScriptsPartial.cshtml", "NDND");
    }
}