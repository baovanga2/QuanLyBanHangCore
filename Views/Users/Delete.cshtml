@model UserDetailsViewModel

@{
    ViewData["Title"] = "Xóa người dùng";
}

<h1>Xóa</h1>
<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4>Người dùng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ten)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SDT)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaiKhoan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaiKhoan)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(modle => Model.Roles)
        </dt>
        <dd class="col-sm-10">
            @foreach (var r in Model.Roles)
            {
                <p class="mb-sm-2">@r</p>
            }
        </dd>
    </dl>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="Delete" asp-route-taiKhoan="@Model.TaiKhoan" method="post">
        <button type="submit" class="btn btn-outline-danger"><i class="fas fa-user-minus"></i> Xóa</button> |
        <a asp-action="Index"><i class="fas fa-undo-alt"></i> Trở về danh sách</a>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("KichHoatDieuHuongScriptsPartial.cshtml", "NDND");
    }
}