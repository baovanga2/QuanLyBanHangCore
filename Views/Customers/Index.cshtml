@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Quản lý khách hàng";
}

@section Styles
{
    <!-- Custom styles for this page -->
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<p>
    <a asp-action="Create" class="btn cur-p btn-outline-primary"><i class="fas fa-plus"></i> Thêm mới</a>
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách khách hàng</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dtKH" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th class="text-center">@Html.DisplayNameFor(model => model.ID)</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ten)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.SDT)
                        </th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.ID)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ten)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-primary"><i class="fas fa-tools"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-primary"><i class="fas fa-list"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-primary"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ThuVienBangScriptsPartial.cshtml");
        await Html.RenderPartialAsync("KichHoatDieuHuongScriptsPartial.cshtml", "KH");
    }
}