@inject SignInManager<User> _signInManager;
<!DOCTYPE html>
<html lang="vi">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"] - PC Shop</title>

    <!-- Custom fonts for this template-->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/mystyle/css/sb-admin-2.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <div class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a asp-action="index" asp-controller="Home" class="sidebar-brand d-flex align-items-center justify-content-center">
                <div class="sidebar-brand-icon">
                    <img src="~/img/logo.jpg" class="img-profile rounded-circle" width="40" />
                </div>
                <div class="sidebar-brand-text mx-3">Gold PC Shop</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Danh mục chức năng
            </div>

            <!-- Nav Item - Don hang -->
            <div class="nav-item" id="liDH">
                <a asp-action="index" asp-controller="Orders" class="nav-link">
                    <i class="fas fa-fw fa-shopping-cart"></i>
                    <span>Quản lý đơn hàng</span>
                </a>
            </div>

            <!-- Nav Item - Khach hang -->
            <div class="nav-item" id="liKH">
                <a asp-action="index" asp-controller="Customers" class="nav-link">
                    <i class="fas fa-fw fa-handshake"></i>
                    <span>Quản lý khách hàng</span>
                </a>
            </div>

            <!-- Nav Item - San pham -->
            <div class="nav-item" id="liSP">
                <a asp-action="index" asp-controller="Products" class="nav-link">
                    <i class="fas fa-fw fa-box"></i>
                    <span>Quản lý sản phẩm</span>
                </a>
            </div>

            <!-- Nav Item - Nha san xuat -->
            <div class="nav-item" id="liNSX">
                <a asp-action="index" asp-controller="Producers" class="nav-link">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Quản lý nhà sản xuất</span>
                </a>
            </div>

            <!-- Nav Item - Loai san pham -->
            <div class="nav-item" id="liLSP">
                <a asp-action="index" asp-controller="Categories" class="nav-link">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Quản lý loại sản phẩm</span>
                </a>
            </div>

            <!-- Nav Item - Thong ke -->
            <div class="nav-item">
                <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-fw fa-dollar-sign"></i>
                    <span>Thống kê</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Tùy chọn thống kê:</h6>
                        <a class="collapse-item" href="buttons">Thống kê theo sản phẩm</a>
                        <a class="collapse-item" href="cards.html">Thống kê theo khách hàng</a>
                    </div>
                </div>
            </div>
            @if (_signInManager.IsSignedIn(User) && User.IsInRole("Quản trị"))
            {
                <!-- Nav Item - Nguoi dung -->
                <div class="nav-item" id="liND">
                    <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapseUser" aria-expanded="true" aria-controls="collapseUser">
                        <i class="fas fa-fw fa-users"></i>
                        <span>Quản lý người dùng</span>
                    </a>
                    <div id="collapseUser" class="collapse" aria-labelledby="headingUser" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Tùy chọn chức năng:</h6>
                            <a asp-action="ListRoles" asp-controller="Users" id="liNDQH" class="collapse-item">Quản lý quyền hạn</a>
                            <a asp-action="index" asp-controller="Users" id="liNDND" class="collapse-item">Quản lý người dùng</a>
                        </div>
                    </div>
                </div>
            }
            
            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </div>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!--Sidebar Toggle (Topbar)-->
                    @*<button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>*@
                    @if (TempData["messageSuccess"] != null)
                    {
                    <div class="alert alert-success m-auto">@TempData["messageSuccess"]</div>
                    }
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Xin chào @User.Identity.Name</span>
                                <img class="img-profile rounded-circle" src="~/img/avatar.jpg" />
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-action="PersonalDetails" asp-controller="Users">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Thông tin
                                </a>                                
                                <a class="dropdown-item" asp-action="PersonalEdit" asp-controller="Users">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Cập nhật
                                </a>
                                <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Users">
                                    <i class="fas fa-key fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Đổi mật khẩu
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Đăng xuất
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    @RenderBody()

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Vang's Website 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="LogoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="LogoutModalLabel">Đăng xuất <i class="fa fa-lock"></i></h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body"><i class="fa fa-question-circle"></i> Bạn có chắc muốn đăng xuất?</div>
                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <form method="post" asp-action="Logout" asp-controller="Account">
                        <input type="submit" class="btn btn-primary" value="Đăng xuất" />
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/mystyle/js/sb-admin-2.min.js"></script>

    @RenderSection("Scripts", required: false)
        
</body>

</html>
