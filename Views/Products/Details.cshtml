@model ProductWithPriceList

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

@section Styles
{
    @{
        await Html.RenderPartialAsync("ThuVienBangStylespartial.cshtml");
    }
}

<h1>Chi tiết</h1>

<div>
    <h4>Sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Ten)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Ten)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gia)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.SoLuong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.SoLuong)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProducerID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Producer.Ten)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.CategoryID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Category.Ten)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrices)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-bordered table-striped" id="dtPrice" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Giá</th>
                        <th>Từ</th>
                        <th>Đến</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductPrices)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                            <td>@Html.DisplayFor(modelItem => item.TGBD)</td>
                            <td>@Html.DisplayFor(modelItem => item.TGKT)</td>
                        </tr>
                    }
                </tbody>
            </table>
        <dd>
    </dl>
</div>
<div>
    <a asp-action="AddQuantity" asp-route-id="@Model.Product.ID"><i class="fas fa-plus"></i> Thêm số lượng</a> |
    <a asp-action="Edit" asp-route-id="@Model.Product.ID"><i class="fas fa-edit"></i> Chỉnh sửa</a> |
    <a asp-action="Index"><i class="fas fa-undo-alt"></i> Trở về danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("ThuVienBangScriptsPartial.cshtml");
        await Html.RenderPartialAsync("KichHoatBangScriptsPartial.cshtml");
        await Html.RenderPartialAsync("KichHoatDieuHuongScriptsPartial.cshtml", "SP");
    }
}