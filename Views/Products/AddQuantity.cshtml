@model ProductAddQuantityViewModel

@{
    ViewData["Title"] = "Thêm số lượng sản phẩm";
}

<h1>Thêm số lượng</h1>

<h4>Sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuantity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Ten" class="control-label"></label>
                <input asp-for="Ten" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SoLuongCo" class="control-label"></label>
                <input asp-for="SoLuongCo" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SoLuongThem" class="control-label"></label>
                <input asp-for="SoLuongThem" class="form-control" />
                <span asp-validation-for="SoLuongThem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Thêm</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fas fa-undo-alt"></i> Trở về danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("KichHoatDieuHuongScriptsPartial.cshtml", "SP");
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}